<link rel="stylesheet" type="text/css" href="/app-assets/css/pages/buy-ico.css">
<% include header %>
<style>
    .copied {
        position: fixed;
        background:  #FF7E39;
        color: #fff;
        font-weight: bold;
        z-index: 999999;
        width: 20%;
        top:40%;
        left:40%;
        text-align: center;
        display: none;
        font-size: 18px;
        border-radius: 1rem;
    }
    .exceednotice {
        position: relative;
        color: #FF7E39;
        font-weight: bold;
        z-index: 999999;
        display: none;
        text-align: center;
        font-size: 13px;
    }
</style>
<img id="loading" src="/img/loading.gif" style="display:none;top:50%;left:50%;position:fixed;z-index:999999;" >
<div class='copied'></div>
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
        <div class="content-header-left col-md-8 col-12 mb-2 breadcrumb-new">
            <h3 class="content-header-title mb-0 d-inline-block">Buy ICO</h3>
            <div class="row breadcrumbs-top d-inline-block">
            <div class="breadcrumb-wrapper col-12">
                <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">Buy ICO
                </li>
                </ol>
            </div>
            </div>
        </div>
        </div>
        <div class="content-detached content-left">
            <div id="wallet" class="content-body"><!-- CIC -->
                <section class="card pull-up">
                    <div class="card-content">
                        <div class="card-body">
                            <div class="col-12">
                                <div class="row">
                                    <div class="col-md-3 col-xl-2 col-12 d-none d-md-block">
                                        <div class="crypto-circle rounded-circle">
                                            <i class="icon-layers"></i>
                                        </div>
                                    </div>
                                    <div class="col-md-5 col-xl-6 col-12">
                                        <p><strong>Your balance:</strong></p>
                                        <h1 id="ethfbalance">0</h1>
                                        <p id="bonus" class="mb-0">Welcome bonus <strong>+0%</strong> expires in 21 days.</p>
                                    </div>
                                    <div class="col-md-4 col-xl-4 col-12 d-none d-md-block text-right">
                                        <button type="button" class="btn-gradient-secondary mt-2">Withdraw <i class="la la-angle-right"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <!--/ CIC -->
                <h3 class="mt-4">Buy tokens</h3>
                <p>To buy tokens, transfer ETH or BTC to your personal deposit address:</p>
                
            </div>
        </div>
        <div class="sidebar-detached sidebar-right" ="">
            <div class="sidebar">
                <div class="sidebar-content">
                    <!-- token sale progress -->
                    <div class="card">
                        <div class="card-header">
                            <h6 class="card-title text-center">Token sale progress</h6>
                            <hr style="background-color: #FF9149 !important;" />
                            <div id="totalsalefromto" class="font-small-3 clearfix"></div>
                            <div id="progressSale" class="progress progress-sm my-1 box-shadow-2">
                                <div class="progress-bar bg-warning" role="progressbar" style="width: 65%" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <div class="font-small-3 clearfix">
                                <span class="float-left">Distributed <br/> <i class="icon-layers"></i> <strong id="totaltokennum">0 LTR</strong></span>
                            </div>
                            <div class="font-small-3 clearfix">
                                <span class="float-left">Equivalent  <br/> <i class="cc ETH-alt"></i> <strong id="toETH">0 ETH</strong></span>
                            </div>
                            <div class="font-small-3 clearfix">
                                <span class="float-left"> <i class="cc BTC-alt"></i> <strong id="toBTC">0 BTC</strong></span>
                            </div>
                        </div>
                    </div>
                    <!--/ token sale progress -->
                
                    <!-- token sale progress -->
                    <div class="card">
                        <div class="card-header">
                            <h6 class="card-title text-center">Calculator</h6>
                        </div>
                        <div class="card-content collapse show">
                            <div class="card-body">
                                <form class="form form-horizontal">
                                    <div class="form-body">    
                                        <div class="form-group row">
                                            <fieldset class="col-12">
                                                <h6 id="exceednotice" class="exceednotice">&nbsp;</h6>
                                                ETH Balance : <strong id="myethbalance">0</strong>
                                                <div class="input-group">
                                                <input id="txtbuybyETH" type="text" class="form-control" placeholder="ETH" aria-describedby="basic-addon4" >
                                                <div class="input-group-append">
                                                    <span class="input-group-text"><i class="cc ETH-alt"></i></span>
                                                </div>
                                                </div>
                                            </fieldset>
                                        </div>
                                        <div class="form-group row">
                                            <fieldset class="col-12">
                                                <p class="mb-0">=</p>
                                            </fieldset>
                                        </div>
                                        <div class="form-group row">
                                            <fieldset class="col-12">
                                                <div class="input-group">
                                                <input id="txtETHF" type="text" class="form-control" placeholder="LTR" aria-describedby="basic-addon4">
                                                <div class="input-group-append">
                                                    <span class="input-group-text" id="basic-addon4"><i class="icon-layers"></i></span>
                                                </div>
                                                </div>
                                            </fieldset>
                                        </div>
                                        <div class="form-group row">
                                            <fieldset class="col-12">
                                                <p id="transaction_notic"></p>
                                                <button id="btnbuy" type="button"  class="btn btn-warning round mr-1 mb-0">Buy token</button>
                                            </fieldset>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!--/ token sale progress -->
                    
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ////////////////////////////////////////////////////////////////////////////-->
<script id="renderwallet" type="text/x-handlebars-template">
    <section class="card pull-up">
        <div class="card-content">
            <div class="card-body">
                <div class="col-12">
                    <div class="row">
                        <div class="col-md-3 col-xl-2 col-12 d-none d-md-block">
                            <div class="crypto-circle rounded-circle">
                                <i class="cc {{type}}-alt"></i>
                            </div>
                        </div>
                        <div class="col-md-5 col-xl-7 col-12">
                            <p><strong>{{description}}</strong></p>
                            <h5 id="address{{type}}">{{address}}</h5>
                            <button id="{{type}}" type="button" class="btn btn-warning round mr-1 mb-0">Buy</button>
                            <button id="copy{{type}}" type="button" class="btn btn-warning round mr-1 mb-0">Copy</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</script>

<script src="/js/jquery.min.js"></script>
<script src="/js/mustache.js"></script>
<script src="/js/jquery.cookie.js"></script>
<script src="/js/buyico.js" type="text/javascript"></script>
<% include footer %>